<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.NewGameConfiguration">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="409dp"
        android:layout_height="84dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/header_gradient"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/configurationBody"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/configurationHeader"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center"
            android:text="@string/configuration_header"
            android:textColor="@color/white"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/configurationSubheader"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:gravity="center"
            android:text="@string/configuration_subheader"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/configurationBody"
        android:layout_width="409dp"
        android:layout_height="645dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/background"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout">

        <Space
            android:id="@+id/beforeBodySpace"
            android:layout_width="match_parent"
            android:layout_height="42dp" />

        <LinearLayout
            android:id="@+id/usernameLayout"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:orientation="horizontal">

            <Space
                android:id="@+id/beforeUsernameSpace"
                android:layout_width="1dp"
                android:layout_height="29dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/usernameIntro"
                android:layout_width="376dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="@string/configuration_username"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/usernameInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:id="@+id/beforeUsernameInputSpace"
                android:layout_width="77dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <!--            Attribute android:autofillHints cannot be passed from strings.xml-->
            <!--            That's why it's hardcoded-->
            <EditText
                android:id="@+id/usernameInput"
                android:layout_width="229dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:autofillHints="Game username"
                android:ems="10"
                android:hint="@string/configuration_username_hint"
                android:inputType="textPersonName"
                android:textSize="12sp" />

            <Space
                android:id="@+id/afterUsernameInputSpace"
                android:layout_width="119dp"
                android:layout_height="45dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/colorsLayout"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:orientation="horizontal">

            <Space
                android:id="@+id/beforeColorsSpace"
                android:layout_width="1dp"
                android:layout_height="29dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/colorsIntro"
                android:layout_width="376dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="@string/configuration_colors"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/colorsInputLayout"
            android:layout_width="325dp"
            android:layout_height="73dp"
            android:orientation="horizontal">

            <Space
                android:id="@+id/beforeColorsInputSpace"
                android:layout_width="92dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/colorSample"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/color_image_description"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/colors" />

            <Spinner
                android:id="@+id/colorSpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:entries="@array/colors_options_array"
                android:spinnerMode="dialog" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:orientation="horizontal">

            <Space
                android:id="@+id/beforeGridSpace"
                android:layout_width="1dp"
                android:layout_height="29dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/gridIntro"
                android:layout_width="376dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="@string/configuration_grid"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gridInputLayout"
            android:layout_width="325dp"
            android:layout_height="73dp"
            android:orientation="horizontal">

            <Space
                android:id="@+id/beforeGridInputSpace"
                android:layout_width="92dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/gridSample"
                android:layout_width="122dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/board_image_description"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/board" />

            <Spinner
                android:id="@+id/gridSpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:entries="@array/board_options_array"
                android:spinnerMode="dialog" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/timeIntroLayout"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:orientation="horizontal">

            <Space
                android:id="@+id/beforeTimeIntroSpace"
                android:layout_width="1dp"
                android:layout_height="29dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/timeIntro"
                android:layout_width="376dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="@string/configuration_time"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/timeInputLayout"
            android:layout_width="325dp"
            android:layout_height="73dp"
            android:orientation="horizontal">

            <Space
                android:id="@+id/beforeTimeInputSpace"
                android:layout_width="92dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/timeSample"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/clock_image_description"
                app:srcCompat="@drawable/clock" />

            <CheckBox
                android:id="@+id/timeCheckBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="" />

        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>